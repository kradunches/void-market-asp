{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "orders": {
        "ClusterId": "ordersCluster",
        "Match": {
          "Path": "/orders/{**catch-all}"
        }
      },
      "users": {
        "ClusterId": "usersCluster",
        "Match": {
          "Path": "/users/{**catch-all}"
        }
      },
      "payments": {
        "ClusterId": "paymentsCluster",
        "Match": {
          "Path": "/payments/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "ordersCluster": {
        "Destinations": {
          "orderSvc": {
            "Address": "http://asp.order-svc:80"
          }
        }
      },
      "usersCluster": {
        "Destinations": {
          "userSvc": {
            "Address": "http://asp.users-svc:80"
          }
        }
      },
      "paymentsCluster": {
        "Destinations": {
          "paymentSvc": {
            "Address": "http://asp.payment-svc:80"
          }
        }
      }
    }
  },
  "Services": {
    "OrderBaseAddress": "http://asp.order-svc:80",
    "UserBaseAddress": "http://asp.users-svc:80",
    "PaymentBaseAddress": "http://asp.payment-svc:80"
  }
}